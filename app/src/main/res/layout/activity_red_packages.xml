<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background">
    <include layout="@layout/activity_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/red_packet"
        android:gravity="center"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/a_my_header"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/my_head_portrait"/>
        <TextView
            android:id="@+id/text_my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nickname"
            android:textColor="@color/app_main_default"
            android:textSize="9sp" />
        <TextView
            android:id="@+id/text_my_money_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/app_main_default"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:background="@color/app_main_default">
        <com.example.xrecyclerview.XRecyclerView
            android:id="@+id/red_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@null">
        </com.example.xrecyclerview.XRecyclerView>
    </LinearLayout>

</LinearLayout>