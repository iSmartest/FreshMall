<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_main_default"
        android:padding="13dp">
        <ImageView
            android:id="@+id/iv_now_buy_shop_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/image_fail_empty"
            android:contentDescription="@string/empty_icon"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_now_buy_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_default"
                android:textSize="14sp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_now_buy_shop_flavor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color_subtitle"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_now_buy_shop_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:textColor="@color/text_price_color"
                android:textSize="18sp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/text_now_buy_shop_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center|right"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color_default"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line"/>
</LinearLayout>