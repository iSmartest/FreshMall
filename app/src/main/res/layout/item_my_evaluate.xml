<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_marginTop="4dp"
        android:background="@color/app_main_default">
        <ImageView
            android:id="@+id/comm_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/image_fail_empty"
            android:contentDescription="@string/empty_icon"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/comm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:layout_weight="1"
                android:textColor="@color/text_color_default"
                android:textSize="14sp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/comm_flavor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="香辣"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color_subtitle"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/comm_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="118.0"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textColor="@color/text_price_color"
                android:textSize="18sp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/comm_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="x1"
                android:gravity="center|right"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color_default"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line"/>
    <TextView
        android:id="@+id/comm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="@color/app_main_default"
        android:textColor="@color/text_color_main"
        android:text="十多个阿水很多辐射"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/app_main_default"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text_edit_corners"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/text_color_default"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_go_pay_money"
            android:gravity="center"
            android:text="去评价"
            android:textColor="@color/app_main_default"
            android:textSize="12sp"
            android:visibility="visible"
            android:layout_marginLeft="14dp"/>
    </LinearLayout>
</LinearLayout>