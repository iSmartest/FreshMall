<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/app_main_default"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/text_now_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_main_default"
            android:textSize="16dp"
            android:text="充值"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/shape_limit_buy_num"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <CheckBox
                android:id="@+id/ck_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:button="@drawable/check_box_style"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:checked="true"/>
            <TextView
                android:id="@+id/text_recharge_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agreement"
                android:textSize="12sp"
                android:textColor="@color/text_color_default"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>