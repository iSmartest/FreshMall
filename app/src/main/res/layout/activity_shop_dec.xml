<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background"
    tools:context="com.lixin.freshmall.activity.ShopDecActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85">
        <include layout="@layout/include_shop_dec"/>
    </ScrollView>
    <include layout="@layout/v_horizontal_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/app_main_default"
        android:padding="8dp">
        <TextView
            android:id="@+id/text_shop_dec_buy_now"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/shape_now_pay"
            android:layout_weight="1"
            android:text="@string/now_pay"
            android:gravity="center"
            android:textColor="@color/app_main_default"
            android:textSize="17sp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/text_shop_dec_add_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/shape_add_cart"
            android:layout_weight="1"
            android:text="@string/add_cart"
            android:gravity="center"
            android:textColor="@color/app_main_default"
            android:textSize="17sp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>
</LinearLayout>