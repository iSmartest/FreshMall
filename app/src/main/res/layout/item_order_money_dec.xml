<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/app_main_background"
        android:layout_marginTop="11dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/app_main_default"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:layout_weight="1">
           <ImageView
               android:id="@+id/iv_order_money_comm_picture"
               android:layout_width="76dp"
               android:layout_height="76dp"
               android:src="@drawable/image_fail_empty"
               android:scaleType="centerCrop"
               android:contentDescription="@string/empty_icon"/>
            <TextView
                android:id="@+id/text_order_money_comm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:gravity="center"
                android:ellipsize="end"
                android:maxEms="5"
                android:maxLines="1"
                android:textColor="@color/text_color_main"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/app_main_background"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_order_money_buy_params"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="12sp"
                    android:text="购买重量"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="12sp"
                    android:text="购买金额"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/app_main_default">
                <TextView
                    android:id="@+id/text_order_money_buy_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="12sp"
                    android:text="500g"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/text_order_money_buy_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="12sp"
                    android:text="￥1.39"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/app_main_background">
                <TextView
                    android:id="@+id/text_order_money_actual_params"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="12sp"
                    android:text="实际重量"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="12sp"
                    android:text="实际金额"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/app_main_default">
                <TextView
                    android:id="@+id/text_order_money_actual_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="12sp"
                    android:text="100g"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/text_order_money_actual_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="12sp"
                    android:text="￥0.35"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>