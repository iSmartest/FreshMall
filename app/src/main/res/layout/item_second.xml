<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/app_main_default"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/iv_class_shop_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="@string/empty_icon"
                android:scaleType="centerCrop"
                android:src="@drawable/image_fail_empty" />

            <TextView
                android:id="@+id/tv_classify_sale_state"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_text_shadow"
                android:gravity="center"
                android:text="已售罄"
                android:textColor="@color/app_main_default"
                android:textSize="10dp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_class_shop_name"
                style="@style/DefaultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxEms="7"
                android:singleLine="true"
                android:text="优质小白菜"
                android:textColor="@color/text_color_main"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_class_dec"
                style="@style/DefaultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="香辣美味"
                android:textColor="@color/text_color_subtitle"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center|left|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_class_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥188"
                    android:textColor="@color/text_price_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_class_original_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="市场价:"
                    android:textColor="@color/text_color_subtitle"
                    android:textSize="8sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_class_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="销量:123"
                android:textColor="@color/text_color_default"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_class_limit"
                android:layout_width="44dp"
                android:layout_height="14dp"
                android:background="@drawable/shape_limit_buy_num"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="限购一份"
                android:textColor="@color/app_main_default"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/v_horizontal_line" />
</LinearLayout>