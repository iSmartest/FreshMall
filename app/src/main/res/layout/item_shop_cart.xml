<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_default"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <CheckBox
            android:id="@+id/ck_shop_cart_chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:button="@drawable/check_box_style"
            android:padding="8dp"
            android:scaleX="1"
            android:scaleY="1" />

        <ImageView
            android:id="@+id/iv_shop_cart_show_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/imag_item_stype"
            android:scaleType="fitXY"
            android:src="@drawable/image_fail_empty"
            android:contentDescription="@string/empty_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="4dp">

                <TextView
                    android:id="@+id/tv_shop_cart_commodity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="小黄鱼"
                    android:textColor="@color/text_color_default"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_shop_cart_first_param"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxEms="5"
                        android:singleLine="true"
                        android:text="香辣"
                        android:textColor="@color/text_color_subtitle"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_shop_cart_second_param"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxEms="4"
                        android:singleLine="true"
                        android:text="2斤"
                        android:textColor="@color/text_color_subtitle"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shop_cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:text="￥390"
                    android:textColor="@color/text_price_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_shop_cart_delete"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/iv_delete"
                    android:contentDescription="@string/delete_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/jia"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/iv_shop_cart_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/jia02"
                            android:contentDescription="@string/sub_icon"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_comm_num"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="13sp"
                        android:textColor="@color/text_color_main" />

                    <LinearLayout
                        android:id="@+id/iv_shop_cart_add"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/jia03"
                            android:contentDescription="@string/add_icon"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
</LinearLayout>