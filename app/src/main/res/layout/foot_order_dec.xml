<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/linear_foot_oder_dec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/app_main_default"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="找零（已返还至余额）"
            android:textColor="@color/text_color_main"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_give_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="2017-12-13"
            android:textColor="@color/text_color_main"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/app_main_default"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="实付总额"
            android:textColor="@color/text_color_main"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_real_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="2017-12-13"
            android:textColor="@color/text_color_main"
            android:textSize="12sp" />
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />

    <TextView
        android:id="@+id/order_dec_money_dec"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_text_edit_corners"
        android:gravity="center"
        android:text="查看明细"
        android:textColor="@color/text_color_default"
        android:textSize="15sp"
        android:visibility="visible"/>
</LinearLayout>