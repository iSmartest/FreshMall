<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:orientation="horizontal"
    android:background="@color/app_main_background">
    <RelativeLayout
        android:id="@+id/top_iag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top">
        <LinearLayout
            android:id="@+id/ly_base_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Iv_base_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/back_write"
                android:visibility="gone"
                android:contentDescription="@string/back_arrow"/>
            <LinearLayout
                android:id="@+id/ly_base_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible">
                <TextView
                    android:id="@+id/text_city_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city_name"
                    android:gravity="center"
                    android:textColor="@color/app_main_default"
                    android:textSize="15sp"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/base_down"/>
                <TextView
                    android:id="@+id/text_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/area_name"
                    android:gravity="center"
                    android:maxLength="4"
                    android:textColor="@color/app_main_default"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_base_center"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_base_titleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                android:textSize="18sp"/>
            <LinearLayout
                android:id="@+id/base_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn_search"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:visibility="visible">
                <EditText
                    android:id="@+id/a_key_edt_search"
                    android:textSize="12sp"
                    android:textColorHint="@color/edit_hint_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:hint="@string/please_enter_the_name_of_the_product"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/im_search"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center|right"
                    android:src="@drawable/base_search"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/search_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_base_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <TextView
                android:id="@+id/tv_base_rightText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:padding="8dp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/Iv_base_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/home_message"
                android:visibility="visible"
                android:contentDescription="@string/message_icon"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>