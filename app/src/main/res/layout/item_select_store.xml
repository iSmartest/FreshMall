<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="13dp"
       android:background="@color/app_main_default">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/text_select_store_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="华莱士店"
               android:layout_weight="1"
               android:textColor="@color/text_color_main"
               android:textSize="15sp"/>
           <TextView
               android:id="@+id/text_select_store_distance"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="3.3km"
               android:textColor="@color/text_color_green"
               android:textSize="10sp"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:gravity="center"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/text_select_store_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="营业时间：08:00—24:00"
                   android:layout_weight="1"
                   android:textColor="@color/text_color_main"
                   android:textSize="13sp"/>
               <TextView
                   android:id="@+id/text_select_store_address"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="地址"
                   android:layout_weight="1"
                   android:textColor="@color/text_color_main"
                   android:textSize="13sp"
                   android:layout_marginTop="5dp"/>
           </LinearLayout>
           <ImageView
               android:id="@+id/iv_store_phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="15dp"
               android:paddingRight="15dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:src="@drawable/chexian01"
               android:contentDescription="@string/phone_icon"/>
       </LinearLayout>
   </LinearLayout>
    <include layout="@layout/v_horizontal_line"/>
</LinearLayout>