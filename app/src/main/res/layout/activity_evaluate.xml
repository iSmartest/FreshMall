<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:background="@color/app_main_default"
        android:paddingTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_my_wait_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="@string/mine_wait_evaluate"
                android:layout_weight="1"
                android:textColor="@color/text_color_green"/>
            <View
                android:id="@+id/evaluate_cursor0"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/text_color_green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_my_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="@string/have_been_evaluated"
                android:layout_weight="1"
                android:textColor="@color/text_color_main"/>
            <View
                android:id="@+id/evaluate_cursor1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="invisible"
                android:background="@color/text_color_green"/>
        </LinearLayout>
    </LinearLayout>
    <com.lixin.freshmall.view.LazyViewPager
        android:id="@+id/evaluate_vPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
</LinearLayout>