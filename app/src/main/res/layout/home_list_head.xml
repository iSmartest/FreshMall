<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/img_home_gallery"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        app:indicator_drawable_selected="@drawable/dot_selected"
        app:indicator_drawable_unselected="@drawable/dot_unselected"
        app:indicator_height="7dp"
        app:indicator_margin="3dp"
        app:indicator_width="7dp"
        android:background="@color/gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_main_default"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/home_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_shop_promotion"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_main_default"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="horizontal">
            <View
                android:layout_width="3dp"
                android:layout_height="16dp"
                android:background="@color/text_color_green" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="促销商品"
                android:textColor="@color/text_color_green"
                android:textSize="13sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多>>"
            android:textColor="@color/text_color_subtitle"
            android:textSize="10sp" />
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@color/app_main_default"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/linear_promotion_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">
            <ImageView
                android:id="@+id/iv_shop_picture01"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"
                android:src="@drawable/image_fail_empty" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_shop_title01"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color_default"
                        android:textSize="14sp"
                        android:maxEms="5"
                        android:layout_weight="1"
                        android:text="进口天然海贝"
                        android:gravity="center"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/text_shop_now_price01"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_price_color"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:text="145"
                        android:gravity="center"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/text_shop_old_price01"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color_subtitle"
                        android:textSize="10sp"
                        android:text="288"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_promotion_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shop_picture02"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_fail_empty"
                    android:contentDescription="@string/empty_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_shop_title02"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxEms="5"
                        android:singleLine="true"
                        android:text="进口天然海贝"
                        android:textColor="@color/text_color_default"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_shop_now_price02"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="145"
                        android:textColor="@color/text_price_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_shop_old_price02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="288"
                        android:textColor="@color/text_color_subtitle"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/v_horizontal_line"/>
            <LinearLayout
                android:id="@+id/linear_promotion_03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shop_picture03"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_fail_empty"
                    android:contentDescription="@string/empty_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|bottom"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_shop_title03"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxEms="5"
                        android:singleLine="true"
                        android:text="进口天然海贝"
                        android:textColor="@color/text_color_default"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_shop_now_price03"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="145"
                        android:textColor="@color/text_price_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_shop_old_price03"
                        style="@style/DefaultTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="288"
                        android:textColor="@color/text_color_subtitle"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:background="@color/gray">
        <com.lixin.freshmall.view.ImageSlideshow
            android:id="@+id/img_store_gallery1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/linear_shop_hot"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_main_default"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="16dp"
                android:background="@color/text_color_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="热销推荐"
                android:textColor="@color/text_color_green"
                android:textSize="13sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多>>"
            android:textColor="@color/text_color_subtitle"
            android:textSize="10sp" />
    </LinearLayout>
    <include layout="@layout/v_horizontal_line" />
</LinearLayout>