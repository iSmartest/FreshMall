<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/text_order_dec_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="订单号：8888888"
            android:textColor="@color/text_color_main"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_order_dec_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="未支付"
            android:textColor="@color/wait_pay_color"
            android:textSize="13sp" />
    </LinearLayout>

    <include layout="@layout/v_horizontal_line" />

    <TextView
        android:id="@+id/text_address_type"
        style="@style/DefaultTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/app_main_default"
        android:ellipsize="end"
        android:gravity="center|left"
        android:paddingLeft="12dp"
        android:text="取货地址"
        android:textColor="@color/text_color_green"
        android:textSize="13sp" />

    <include layout="@layout/v_horizontal_line" />

    <LinearLayout
        android:id="@+id/iv_add_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/app_main_default"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left">

            <TextView
                android:id="@+id/text_order_dec_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="【姓名】"
                android:textColor="@color/text_color_main"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_order_dec_store_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="18337125295"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_order_dec_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="left"
            android:text="收货地址"
            android:textColor="@color/text_color_main"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/app_main_default"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:id="@+id/linear_place_order_time"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="下单时间"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_place_order_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="2017-12-13"
                android:textColor="@color/text_color_main"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_order_data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="预约取货日期"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_reservation_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="2017-12-13"
                android:textColor="@color/text_color_main"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_order_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="预约取货时间"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_reservation_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="2017-12-13"
                android:textColor="@color/text_color_main"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:id="@+id/linear_actual_get_goods_time"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_actual_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="实际取货时间"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_actual_get_goods_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="2017-12-13"
                android:textColor="@color/text_color_main"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="购物袋"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_shopping_bag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="2017-12-13"
                android:textColor="@color/text_color_main"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="优惠券"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_order_dec_coupon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="2017-12-13"
                android:textColor="@color/text_color_main"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:id="@+id/linear_send_free"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="配送费"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_send_free"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="2017-12-13"
                android:textColor="@color/text_color_main"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <LinearLayout
            android:id="@+id/linear_payment_method"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="支付方式"
                android:textColor="@color/text_color_main"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="2017-12-13"
                android:textColor="@color/text_color_main"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/v_horizontal_line" />

        <TextView
            style="@style/DefaultTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/app_main_default"
            android:ellipsize="end"
            android:gravity="center|left"
            android:text="商品信息"
            android:textColor="@color/text_color_green"
            android:textSize="13sp" />
        <include layout="@layout/v_horizontal_line" />
    </LinearLayout>
</LinearLayout>