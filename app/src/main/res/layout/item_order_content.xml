<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_default"
    android:padding="13dp">
    <ImageView
        android:id="@+id/comm_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:src="@drawable/image_fail_empty"
        android:contentDescription="@string/empty_icon"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:layout_weight="1"
            android:textColor="@color/text_color_default"
            android:textSize="14sp"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/comm_flavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="香辣"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_subtitle"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comm_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="118.0"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/text_price_color"
            android:textSize="18sp"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/comm_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="x1"
            android:gravity="center|right"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_default"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>