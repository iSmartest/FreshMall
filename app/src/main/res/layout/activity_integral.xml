<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <include layout="@layout/activity_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/my_integral"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_my_integral_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/app_main_default"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/text_my_integral_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ordinary_member"
            android:textColor="@color/app_main_default"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_default"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/integral_source"
                android:textSize="13sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:textColor="@color/text_color_default"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purchase_the_goods_to_get_the_integral"
                android:textSize="13sp"
                android:paddingTop="10dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:textColor="@color/text_color_default"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_color"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:id="@+id/linear_my_integral"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/app_main_default"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_integral_detail"
                android:textSize="15sp"
                android:textColor="@color/text_color_main"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_in"
                android:contentDescription="@string/right_arrow"/>
        </LinearLayout>
        <include layout="@layout/v_horizontal_line"/>
    </LinearLayout>
</LinearLayout>